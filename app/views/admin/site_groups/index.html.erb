<p id="notice"><%= notice %></p>

<h1>Site Groups</h1>
<% if @site_groups.present? %>
  <div class="mw9 center ph3-ns">
      <div class="cf ph2-ns pv2 mv2 ">
        <div class="fl w-10 pa2 b">
          Name
        </div>
        <div class="fl w-10 pa2 b">
          Info
        </div>
        <div class="fl w-40 pa2 b">
          Sites
        </div>
        <div class="fl w-20 pa2 b">
          Actions
        </div>
      </div>
    </div>
  <% @site_groups.each do |sg| %>
    <div class="mw9 center ph3-ns">
      <div class="cf ph2-ns pv2 mv2 ">
        <div class="fl w-10 pa2">
          <%= sg.name %>
        </div>
        <div class="fl w-10 pa2">
          <%= sg.identifier %>
        </div>
        <div class="fl w-40 pa2 bb b--light-gray">
          <% if sg.sites.present? %>
            <% sg.sites.each do |site| %>
              <span><%= link_to site.name, admin_site_path(site) %></span><br/>
            <% end %>
          <% end %>
        </div>
        <div class="fl w-20 pa2">
          <%= link_to 'Edit', edit_admin_site_group_path(sg) %><br/>
          <%= link_to "Delete", admin_site_group_path(sg), method: :delete, data: { confirm: "Are you sure? This cannot be reversed" } %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
No site groups present
<% end %>


<% if admin? %>
  <%= link_to 'New Site Group', new_admin_site_group_path %>
<% end %>
